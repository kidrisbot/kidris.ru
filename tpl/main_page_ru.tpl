            <script src="js/jquery.animateNumber.js"></script>
            <script>
                function isScrolledIntoView(elem)
                {
                    var docViewTop = $(window).scrollTop();
                    var docViewBottom = docViewTop + $(window).height();
                    var elemTop = elem.offset().top;
                    var elemBottom = elemTop + elem.height();
                    return ((elemBottom >= docViewTop) && (elemTop <= docViewBottom)
                    && (elemBottom <= docViewBottom) &&  (elemTop >= docViewTop) );
                }

                function genLongTimeBlock(){
                    if (window.longTimeAlredy == 0)
                        if (isScrolledIntoView($("span.allWorks"))){
                            $('span.allWorks').text('0');
                            $('span.allUsers').text('0');
                            $('span.works_yesterday').text('0');

                            var separator_number_step = $.animateNumber.numberStepFactories.separator(' ');

                            $('span.allWorks').animateNumber({ number: {all}, numberStep: separator_number_step}, 1000);
                            $('span.allUsers').animateNumber({ number: 841, numberStep: separator_number_step }, 1000);
                            $('span.works_yesterday').animateNumber({ number: 1138, numberStep: separator_number_step }, 1000);

                            window.longTimeAlredy = 1;
                        }

                }

                $(document).ready(function() {
                    window.longTimeAlredy = 0;
                    if (!isScrolledIntoView($("span.allWorks")))
                        $(window).scroll(function() {genLongTimeBlock();});
                    else
                        genLongTimeBlock();

                    setInterval(function(){
                        $.ajax({
                            type:'POST',
                            url:'/site/Landingpage',
                            data: {update: 1, 'token': '44973c704c0a1d31b3ac24db28cf8ff1e00f7f56'},
                            dataType: 'json',
                            success: function(data){
                                var separator_number_step = $.animateNumber.numberStepFactories.separator(' ');
                                $('span.allWorks').animateNumber({ number: data.works, numberStep: separator_number_step}, 1000);
                                $('span.allUsers').animateNumber({ number: data.users, numberStep: separator_number_step}, 1000);
                            }
                        })
                    }, 3000)



                });
            </script>
